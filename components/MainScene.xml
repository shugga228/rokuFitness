<?xml version="1.0" encoding="UTF-8"?>

<component name="MainScene" extends="Scene">
    <script type="text/brightscript" uri="MainScene.brs" />
    <script type="text/brightscript" uri="UILogic/ScreenStackLogic.brs" />
    <script type="text/brightscript" uri="UILogic/ContentTaskLogic.brs" />
    <script type="text/brightscript" uri="UILogic/GridScreenLogic.brs" />
    <script type="text/brightscript" uri="UILogic/VideoPlayerLogic.brs" />
    <children>
         
         <Overhang
            id="overhang"
            showOptions="false"
            showClock="false"
            logoUri="pkg:/images/logo.png"
            translation="[0,20]"
        />
        <Label
            id="loadingIndicator"
            text="Loading..."
            width="1280"
            height="720"
            translation="[0, 0]"
            horizAlign="center"
            vertAlign="center"
            visible="false"
            font="font:MediumBoldSystemFont"
        />

        
        <Label id="goalLabel" text="Daily Calorie Goal: 2500" visible="true" translation="[800,75]" horizAlign="center" vertAlign="center" font="font:MediumBoldSystemFont"/>
        <Label id="burnLabel" text="Goal Met Indicator: " visible="true" translation="[800,125]" horizAlign="center" vertAlign="center" font="font:MediumBoldSystemFont"/>
        <Label id="counter" text="0" visible="true" translation="[1100,175]" horizAlign="center" vertAlign="center" font="font:MediumBoldSystemFont"/>
        <Button id="greenButton" text=" " textColor="0xff0000ff" iconUri="pkg:/images/buttonGreen.png" focusedTextColor="0xff0000ff" width="50" height="50" translation="[1000, 115]" visible="false"/>
        <Button id="redButton" text=" " textColor="0xff0000ff" iconUri="pkg:/images/buttonRed.png" focusedTextColor="0xff0000ff" width="50" height="50" translation="[1000, 115]" visible="true"/>


        

    </children>
</component>
